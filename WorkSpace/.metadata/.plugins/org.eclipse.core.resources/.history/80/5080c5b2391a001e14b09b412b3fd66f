	<script>
	// 조회목록갯수변경시
		$('[name=pageList], [name=viewType]').change(function(){
			// 목록갯수 변경시는 총 페이지수가 달라지므로 항상 1페이지에 위치해야 함.
			// 보기형태 변경시는 현재 페이지가 유지되어야함
			$('form').submit()
		})
		// 해당목록갯수가선택되게끔
		$('[name=pageList]').val(${page.pageList}).prop('selected', true);
	</script>
