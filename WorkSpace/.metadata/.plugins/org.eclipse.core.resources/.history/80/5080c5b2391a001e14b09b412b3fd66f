			<div class="col-auto">
				<div class="row justify-content-between d-flex">
					<div class="col-auto">
						<select class="form-select" name="pageList">
							<c:forEach var="i" begin="1" end="5">
								<option value="${10*i }">${10*i }개씩</option>
							</c:forEach>
						</select>
					</div>
					<!-- 보기형태(리스트,그리드) 선택 -->
